<%- include('../../partials/header') %>
<%- include('../../partials/navbar') %>

<main class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
            <li class="breadcrumb-item"><a href="/products">Ürünler</a></li>
            <li class="breadcrumb-item active">Kategoriler</li>
        </ol>
    </nav>

    <h2 class="mb-4"><i class="bi bi-grid me-2"></i>Tüm Kategoriler</h2>

    <% if (categories && categories.length > 0) { %>
    <div class="row g-4">
        <% categories.forEach(function(category) { %>
        <div class="col-md-4 col-lg-3">
            <a href="/products/category/<%= category.id %>" class="text-decoration-none">
                <div class="card category-card h-100 text-center">
                    <div class="card-body py-5">
                        <i class="bi bi-tag fs-1 text-primary mb-3"></i>
                        <h5 class="card-title"><%= category.name %></h5>
                        <% if (category.description) { %>
                        <p class="card-text text-muted small"><%= category.description %></p>
                        <% } %>
                    </div>
                </div>
            </a>
        </div>
        <% }); %>
    </div>
    <% } else { %>
    <div class="empty-state">
        <i class="bi bi-folder"></i>
        <h4>Kategori Bulunamadı</h4>
        <p class="text-muted">Henüz kategori eklenmemiş.</p>
    </div>
    <% } %>
</main>

<%- include('../../partials/footer') %>
