<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="mb-4">Kaliteli Kumaş, Özel Tasarım</h1>
                <p class="mb-4">En kaliteli kumaşlar ve profesyonel terzilik hizmetleri ile hayalinizdeki kıyafetleri gerçeğe dönüştürüyoruz.</p>
                <div class="d-flex gap-3">
                    <a href="/products" class="btn btn-sartoria btn-lg">
                        <i class="bi bi-grid me-2"></i>Ürünleri Keşfet
                    </a>
                    <a href="/products?type=0" class="btn btn-outline-sartoria btn-lg">
                        <i class="bi bi-scissors me-2"></i>Kumaşlar
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center d-none d-lg-block">
                <i class="bi bi-scissors" style="font-size: 15rem; opacity: 0.3;"></i>
            </div>
        </div>
    </div>
</section>

<main class="container">
    <!-- Kategoriler -->
    <% if (categories && categories.length > 0) { %>
    <section class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold"><i class="bi bi-grid me-2"></i>Kategoriler</h2>
            <a href="/products/categories" class="btn btn-outline-primary">Tümünü Gör</a>
        </div>
        <div class="row g-3">
            <% categories.slice(0, 4).forEach(function(category) { %>
            <div class="col-6 col-md-3">
                <a href="/products/category/<%= category.id %>" class="text-decoration-none">
                    <div class="card category-card h-100">
                        <div class="card-body text-center py-4">
                            <i class="bi bi-tag fs-1 text-primary"></i>
                            <h5 class="card-title mt-3 mb-0"><%= category.name %></h5>
                        </div>
                    </div>
                </a>
            </div>
            <% }); %>
        </div>
    </section>
    <% } %>

    <!-- Vitrin Ürünleri -->
    <% if (showcaseProducts && showcaseProducts.length > 0) { %>
    <section class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold"><i class="bi bi-star me-2"></i>Öne Çıkan Ürünler</h2>
            <a href="/products" class="btn btn-outline-primary">Tümünü Gör</a>
        </div>
        <div class="row g-4">
            <% showcaseProducts.slice(0, 4).forEach(function(product) { %>
            <div class="col-6 col-md-3">
                <div class="card product-card h-100">
                    <span class="badge bg-warning product-badge">Öne Çıkan</span>
                    <img src="<%= product.imageUrl || 'https://via.placeholder.com/300x220?text=Ürün' %>"
                         class="card-img-top" alt="<%= product.name %>">
                    <div class="card-body d-flex flex-column">
                        <h6 class="product-title"><%= product.name %></h6>
                        <p class="product-price mt-auto mb-2"><%= product.price?.toFixed(2) || '0.00' %> TL</p>
                        <div class="d-grid gap-2">
                            <a href="/products/<%= product.id %>" class="btn btn-outline-primary btn-sm">Detay</a>
                            <button class="btn btn-primary btn-sm btn-add-to-cart" data-product-id="<%= product.id %>">
                                <i class="bi bi-cart-plus"></i> Sepete Ekle
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </section>
    <% } %>

    <!-- Son Eklenen Ürünler -->
    <% if (lastAddedProducts && lastAddedProducts.length > 0) { %>
    <section class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold"><i class="bi bi-clock-history me-2"></i>Son Eklenen Ürünler</h2>
            <a href="/products" class="btn btn-outline-primary">Tümünü Gör</a>
        </div>
        <div class="row g-4">
            <% lastAddedProducts.forEach(function(product) { %>
            <div class="col-6 col-md-3">
                <div class="card product-card h-100">

                    <img src="<%= product.imageUrl || 'https://via.placeholder.com/300x220?text=Ürün' %>"
                         class="card-img-top" alt="<%= product.name %>">
                    <div class="card-body d-flex flex-column">
                        <h6 class="product-title"><%= product.name %></h6>
                        <p class="text-muted small mb-2"><%= product.description?.substring(0, 50) %>...</p>
                        <p class="product-price mt-auto mb-2"><%= product.price?.toFixed(2) || '0.00' %> TL</p>
                        <div class="d-grid gap-2">
                            <a href="/products/<%= product.id %>" class="btn btn-outline-primary btn-sm">Detay</a>
                            <button class="btn btn-primary btn-sm btn-add-to-cart" data-product-id="<%= product.id %>">
                                <i class="bi bi-cart-plus"></i> Sepete Ekle
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </section>
    <% } %>

    <!-- Ürün Tipleri -->
    <section class="mb-5">
        <div class="row g-4">
            <div class="col-md-6">
                <div class="card bg-primary text-white h-100">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center">
                            <div>
                                <h3 class="mb-2"><i class="bi bi-scissors me-2"></i>Kumaşlar</h3>
                                <p class="mb-3">En kaliteli kumaş çeşitleri ile özel tasarımlarınızı hayata geçirin.</p>
                                <a href="/products?type=0" class="btn btn-light">
                                    Kumaşları Keşfet <i class="bi bi-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card bg-dark text-white h-100">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center">
                            <div>
                                <h3 class="mb-2"><i class="bi bi-handbag me-2"></i>Hazır Giyim</h3>
                                <p class="mb-3">Özenle hazırlanmış koleksiyonumuzdan şık kıyafetler seçin.</p>
                                <a href="/products?type=1" class="btn btn-light">
                                    Koleksiyonu Gör <i class="bi bi-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Özellikler -->
    <section class="mb-5">
        <div class="row g-4 text-center">
            <div class="col-md-3">
                <div class="p-4">
                    <i class="bi bi-truck fs-1 text-primary mb-3"></i>
                    <h5>Ücretsiz Kargo</h5>
                    <p class="text-muted small">500 TL üzeri siparişlerde</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="p-4">
                    <i class="bi bi-shield-check fs-1 text-primary mb-3"></i>
                    <h5>Güvenli Ödeme</h5>
                    <p class="text-muted small">256-bit SSL güvenlik</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="p-4">
                    <i class="bi bi-arrow-counterclockwise fs-1 text-primary mb-3"></i>
                    <h5>Kolay İade</h5>
                    <p class="text-muted small">14 gün içinde ücretsiz</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="p-4">
                    <i class="bi bi-headset fs-1 text-primary mb-3"></i>
                    <h5>7/24 Destek</h5>
                    <p class="text-muted small">Her zaman yanınızdayız</p>
                </div>
            </div>
        </div>
    </section>
</main>

<%- include('../partials/footer') %>
