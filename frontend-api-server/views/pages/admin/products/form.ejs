<%- include('../../../partials/header') %>
    <%- include('../../../partials/navbar') %>

        <div class="container-fluid">
            <div class="row">
                <!-- Admin Sidebar -->
                <div class="col-lg-2 admin-sidebar d-none d-lg-block">
                    <h5 class="text-white px-3 mb-4">
                        <i class="bi bi-gear me-2"></i>Admin Panel
                    </h5>
                    <nav class="nav flex-column">
                        <a class="nav-link" href="/admin">
                            <i class="bi bi-speedometer2 me-2"></i>Dashboard
                        </a>
                        <a class="nav-link active" href="/admin/products">
                            <i class="bi bi-box me-2"></i>Ürünler
                        </a>
                        <a class="nav-link" href="/admin/categories">
                            <i class="bi bi-tags me-2"></i>Kategoriler
                        </a>
                        <a class="nav-link" href="/admin/stock">
                            <i class="bi bi-boxes me-2"></i>Stok Yönetimi
                        </a>
                    </nav>
                </div>

                <!-- Main Content -->
                <div class="col-lg-10 py-4">
                    <div class="container-fluid">
                        <nav aria-label="breadcrumb" class="mb-4">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
                                <li class="breadcrumb-item"><a href="/admin/products">Ürünler</a></li>
                                <li class="breadcrumb-item active">
                                    <%= product ? 'Düzenle' : 'Yeni Ürün' %>
                                </li>
                            </ol>
                        </nav>

                        <div class="admin-card">
                            <h4 class="mb-4">
                                <i class="bi bi-box me-2"></i>
                                <%= product ? 'Ürün Düzenle' : 'Yeni Ürün Ekle' %>
                            </h4>

                            <form action="/admin/products" method="POST">
                                <% if (product) { %>
                                    <input type="hidden" name="id" value="<%= product.id %>">
                                    <% } %>

                                        <div class="row g-3">
                                            <div class="col-md-8">
                                                <label class="form-label">Ürün Adı *</label>
                                                <input type="text" class="form-control" name="name"
                                                    value="<%= product?.name || '' %>" required>
                                            </div>

                                            <div class="col-md-4">
                                                <label class="form-label">Fiyat (TL) *</label>
                                                <input type="number" step="0.01" class="form-control" name="price"
                                                    value="<%= product?.price || '' %>" required>
                                            </div>

                                            <div class="col-md-4">
                                                <label class="form-label">Kategori *</label>
                                                <select class="form-select" name="categoryId" required>
                                                    <option value="">Kategori Seçin</option>
                                                    <% categories.forEach(function(cat) { %>
                                                        <option value="<%= cat.id %>" <%=product?.categoryId==cat.id
                                                            ? 'selected' : '' %>>
                                                            <%= cat.name %>
                                                        </option>
                                                        <% }); %>
                                                </select>
                                            </div>

                                            <div class="col-md-4">
                                                <label class="form-label">Ürün Tipi *</label>
                                                <select class="form-select" name="productType" required>
                                                    <option value="0" <%=product?.productType===0 ? 'selected' : '' %>
                                                        >Kumaş</option>
                                                    <option value="1" <%=product?.productType===1 ? 'selected' : '' %>
                                                        >Hazır Giyim</option>
                                                </select>
                                            </div>

                                            <div class="col-md-4">
                                                <label class="form-label">Başlangıç Stok (Kumaş)</label>
                                                <input type="number" class="form-control" name="stockQuantity"
                                                    value="<%= product?.stock?.quantity || '' %>" placeholder="0">
                                            </div>

                                            <div class="col-12">
                                                <label class="form-label">Görsel URL</label>
                                                <input type="url" class="form-control" name="imageUrl"
                                                    value="<%= product?.imageUrl || '' %>"
                                                    placeholder="https://example.com/image.jpg">
                                            </div>

                                            <div class="col-12">
                                                <label class="form-label">Açıklama</label>
                                                <textarea class="form-control" name="description"
                                                    rows="4"><%= product?.description || '' %></textarea>
                                            </div>
                                        </div>

                                        <div class="mt-4 d-flex gap-2">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="bi bi-check-circle me-2"></i>Kaydet
                                            </button>
                                            <a href="/admin/products" class="btn btn-outline-secondary">
                                                <i class="bi bi-x me-2"></i>İptal
                                            </a>
                                        </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('../../../partials/footer') %>