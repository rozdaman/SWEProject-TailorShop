<%- include('../../../partials/header') %>
<%- include('../../../partials/navbar') %>

<!-- Bu sayfaya özel stiller -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    body { background-color: #f3f4f6; font-family: 'Segoe UI', system-ui, -apple-system, sans-serif; }
    
    .admin-sidebar { background: #1e293b; min-height: 100vh; color: #fff; padding-top: 20px; }
    .admin-sidebar .nav-link { color: #94a3b8; padding: 12px 20px; transition: 0.3s; font-weight: 500; border-left: 3px solid transparent; }
    .admin-sidebar .nav-link:hover, .admin-sidebar .nav-link.active { color: #fff; background: rgba(255,255,255,0.05); border-left-color: #3b82f6; }
    
    .stat-card {
        background: #fff; border-radius: 12px; padding: 25px; box-shadow: 0 4px 6px -1px rgba(0,0,0,0.05);
        display: flex; align-items: center; justify-content: space-between; border: none;
    }
    .stat-icon { width: 55px; height: 55px; border-radius: 12px; display: flex; align-items: center; justify-content: center; font-size: 1.7rem; }
    .bg-blue-light { background: #eff6ff; color: #3b82f6; }
    .bg-orange-light { background: #fff7ed; color: #f97316; }
    .bg-green-light { background: #f0fdf4; color: #22c55e; }

    .content-card {
        background: #fff; border-radius: 12px; border: none; box-shadow: 0 4px 6px -1px rgba(0,0,0,0.05);
        margin-bottom: 25px; overflow: hidden;
    }
    .card-header-styled {
        padding: 20px 25px; border-bottom: 1px solid #f1f5f9; background: #fff; font-weight: 700; color: #334155;
        display: flex; align-items: center; justify-content: space-between;
    }
    
    .form-control, .form-select { border-color: #e2e8f0; padding: 10px 15px; border-radius: 8px; font-size: 0.95rem; }
    .form-control:focus, .form-select:focus { border-color: #3b82f6; box-shadow: 0 0 0 3px rgba(59,130,246,0.1); }
    .btn-primary { background-color: #3b82f6; border-color: #3b82f6; padding: 10px 20px; font-weight: 600; }
    
    .table thead th { background: #f8fafc; color: #64748b; font-weight: 600; text-transform: uppercase; font-size: 0.8rem; padding: 15px 25px; border-bottom: 1px solid #e2e8f0; }
    .table tbody td { padding: 15px 25px; vertical-align: middle; color: #334155; border-bottom: 1px solid #f1f5f9; }
    .avatar-box { width: 40px; height: 40px; background: #f1f5f9; color: #64748b; border-radius: 8px; display: flex; align-items: center; justify-content: center; font-weight: 700; font-size: 0.9rem; margin-right: 15px; }
    
    .status-badge { padding: 6px 12px; border-radius: 20px; font-size: 0.8rem; font-weight: 600; }
    .status-ok { background: #dcfce7; color: #166534; }
    .status-low { background: #ffedd5; color: #9a3412; }
    .status-out { background: #fee2e2; color: #991b1b; }
</style>

<div class="container-fluid p-0">
    <div class="row g-0">
        <!-- Sidebar -->
        <div class="col-lg-2 admin-sidebar d-none d-lg-block">
            <div class="px-4 mb-4 pt-2">
                <h4 class="mb-0 fw-bold text-white"><i class="bi bi-scissors text-primary me-2"></i>TAILOR.</h4>
            </div>
            <nav class="nav flex-column px-2">
                <a class="nav-link" href="/admin"><i class="bi bi-speedometer2 me-3"></i>Dashboard</a>
                <a class="nav-link" href="/admin/products"><i class="bi bi-box-seam me-3"></i>Ürünler</a>
                <a class="nav-link" href="/admin/categories"><i class="bi bi-tags me-3"></i>Kategoriler</a>
                <a class="nav-link active" href="/admin/stock"><i class="bi bi-boxes me-3"></i>Stok Yönetimi</a>
                <a class="nav-link" href="/admin/orders"><i class="bi bi-cart3 me-3"></i>Siparişler</a>
                <a class="nav-link" href="/admin/users"><i class="bi bi-people me-3"></i>Kullanıcılar</a>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="col-lg-10 py-4 px-4">
            
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-5">
                <div>
                    <h3 class="fw-bold text-dark mb-1">Stok Yönetimi</h3>
                    <p class="text-muted mb-0">Envanter durumu ve stok hareketleri.</p>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-white bg-white border" onclick="location.reload()"><i class="bi bi-arrow-clockwise me-2"></i>Yenile</button>
                    <button class="btn btn-dark"><i class="bi bi-file-earmark-excel me-2"></i>Rapor Al</button>
                </div>
            </div>

            <!-- İstatistik Kartları -->
            <div class="row g-4 mb-5">
                <div class="col-md-4">
                    <div class="stat-card">
                        <div>
                            <h6 class="text-muted small fw-bold mb-1">TOPLAM ENVANTER</h6>
                            <h2 class="mb-0 fw-bold"><%= stocks ? stocks.length : 0 %></h2>
                        </div>
                        <div class="stat-icon bg-blue-light"><i class="bi bi-layers"></i></div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-card">
                        <div>
                            <h6 class="text-muted small fw-bold mb-1">KRİTİK STOK</h6>
                            <h2 class="mb-0 fw-bold text-warning">
                                <%= stocks ? stocks.filter(s => s.quantity < 10 && s.quantity > 0).length : 0 %>
                            </h2>
                        </div>
                        <div class="stat-icon bg-orange-light"><i class="bi bi-exclamation-triangle"></i></div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-card">
                        <div>
                            <h6 class="text-muted small fw-bold mb-1">DEPO DOLULUK</h6>
                            <h2 class="mb-0 fw-bold text-success">%98</h2>
                        </div>
                        <div class="stat-icon bg-green-light"><i class="bi bi-house-check"></i></div>
                    </div>
                </div>
            </div>

            <div class="row g-4 mb-5">
                <!-- Sol Kolon: İşlemler -->
                <div class="col-lg-4">
                    
                    <!-- Stok Ekleme Formu -->
                    <div class="content-card">
                        <div class="card-header-styled">
                            <span><i class="bi bi-box-arrow-in-down me-2 text-primary"></i>Hızlı Stok Girişi</span>
                        </div>
                        <div class="p-4">
                            <form action="/admin/stock/add" method="POST">
                                <div class="mb-3">
                                    <label class="form-label small text-muted fw-bold">ÜRÜN ID</label>
                                    <input type="number" name="productId" class="form-control" placeholder="Örn: 105" required>
                                </div>
                                <div class="row g-2 mb-3">
                                    <div class="col-6">
                                        <label class="form-label small text-muted fw-bold">MİKTAR</label>
                                        <input type="number" step="0.01" name="quantity" class="form-control" placeholder="0.00" required>
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label small text-muted fw-bold">DEPO</label>
                                        <select class="form-select" name="location" required>
                                            <option value="Ana Depo">Ana Depo</option>
                                            <option value="Depo 2">Kumaş Deposu</option>
                                            <option value="Mağaza">Mağaza Vitrin</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label small text-muted fw-bold">VARYANT ID (OPSİYONEL)</label>
                                    <input type="number" name="variantId" class="form-control" placeholder="Varsa giriniz">
                                </div>
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="bi bi-plus-lg me-2"></i>Kaydet ve Ekle
                                </button>
                            </form>
                        </div>
                    </div>

                    <!-- Stok Güncelleme Formu -->
                    <div class="content-card">
                        <div class="card-header-styled">
                            <span><i class="bi bi-pencil-square me-2 text-warning"></i>Sayım Düzeltme</span>
                        </div>
                        <div class="p-4">
                            <form action="/admin/stock/update" method="POST">
                                <div class="row g-2 mb-3">
                                    <div class="col-6">
                                        <label class="form-label small text-muted fw-bold">ÜRÜN ID</label>
                                        <input type="number" name="productId" class="form-control" required>
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label small text-muted fw-bold">YENİ MİKTAR</label>
                                        <input type="number" step="0.01" name="newQuantity" class="form-control" required>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-warning text-white w-100 fw-bold">
                                    Güncelle
                                </button>
                            </form>
                            <hr class="my-4 border-light">
                            <h6 class="small fw-bold text-muted mb-2">GEÇMİŞ SORGULA</h6>
                            <div class="input-group">
                                <input type="number" class="form-control" id="historyProductId" placeholder="Ürün ID...">
                                <button class="btn btn-light border" onclick="viewHistory()">Ara</button>
                            </div>
                        </div>
                    </div>

                </div>

                <!-- Sağ Kolon: Tablo -->
                <div class="col-lg-8">
                    <div class="content-card h-100">
                        <div class="card-header-styled">
                            <span><i class="bi bi-list-ul me-2"></i>Mevcut Stok Listesi</span>
                            <div class="input-group" style="width: 220px;">
                                <span class="input-group-text bg-white border-end-0"><i class="bi bi-search small text-muted"></i></span>
                                <input type="text" class="form-control border-start-0 ps-0" placeholder="Tabloda ara...">
                            </div>
                        </div>
                        
                        <% if (stocks && stocks.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>Ürün Bilgisi</th>
                                        <th>Miktar</th>
                                        <th>Durum</th>
                                        <th>Konum</th>
                                        <th class="text-end pe-4">İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% stocks.forEach(function(stock) { %>
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-box">#<%= stock.productId %></div>
                                                <div>
                                                    <h6 class="mb-0 text-dark" style="font-size: 0.95rem;">
                                                        <%= stock.productName || stock.product?.name || 'Bilinmeyen Ürün' %>
                                                    </h6>
                                                    <small class="text-muted" style="font-size: 0.75rem;">ID: <%= stock.stockId %></small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="fw-bold text-dark"><%= stock.quantity %></td>
                                        <td>
                                            <% if (stock.quantity > 10) { %>
                                                <span class="status-badge status-ok">Yeterli</span>
                                            <% } else if (stock.quantity > 0) { %>
                                                <span class="status-badge status-low">Kritik</span>
                                            <% } else { %>
                                                <span class="status-badge status-out">Tükendi</span>
                                            <% } %>
                                        </td>
                                        <td><i class="bi bi-geo-alt me-1 text-muted"></i><%= stock.location || 'Ana Depo' %></td>
                                        <td class="text-end pe-4">
                                            <button class="btn btn-sm btn-light border text-muted"><i class="bi bi-pencil-fill"></i></button>
                                        </td>
                                    </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                        <% } else { %>
                        <div class="text-center py-5">
                            <i class="bi bi-inbox fs-1 text-muted opacity-50"></i>
                            <p class="text-muted mt-2 small">Henüz stok verisi bulunamadı.</p>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
function viewHistory() {
    const productId = document.getElementById('historyProductId').value;
    if (productId) {
        window.location.href = '/admin/stock/history/' + productId;
    } else {
        alert('Lütfen bir Ürün ID giriniz.');
    }
}
</script>

<%- include('../../../partials/footer') %>