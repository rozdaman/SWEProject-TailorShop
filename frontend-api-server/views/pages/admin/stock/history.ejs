<%- include('../../../partials/header') %>
<%- include('../../../partials/navbar') %>

<div class="container-fluid">
    <div class="row">
        <!-- Admin Sidebar -->
        <div class="col-lg-2 admin-sidebar d-none d-lg-block">
            <h5 class="text-white px-3 mb-4">
                <i class="bi bi-gear me-2"></i>Admin Panel
            </h5>
            <nav class="nav flex-column">
                <a class="nav-link" href="/admin">
                    <i class="bi bi-speedometer2 me-2"></i>Dashboard
                </a>
                <a class="nav-link active" href="/admin/stock">
                    <i class="bi bi-boxes me-2"></i>Stok Yönetimi
                </a>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="col-lg-10 py-4">
            <div class="container-fluid">
                <nav aria-label="breadcrumb" class="mb-4">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
                        <li class="breadcrumb-item"><a href="/admin/stock">Stok Yönetimi</a></li>
                        <li class="breadcrumb-item active">Stok Geçmişi #<%= productId %></li>
                    </ol>
                </nav>

                <div class="admin-card">
                    <h4 class="mb-4"><i class="bi bi-clock-history me-2"></i>Stok Geçmişi - Ürün #<%= productId %></h4>

                    <% if (history && history.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Tarih</th>
                                    <th>İşlem</th>
                                    <th>Miktar</th>
                                    <th>Not</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% history.forEach(function(h) { %>
                                <tr>
                                    <td><%= new Date(h.createdAt || h.date).toLocaleString('tr-TR') %></td>
                                    <td><%= h.operation || h.type %></td>
                                    <td>
                                        <% if (h.quantity > 0) { %>
                                        <span class="text-success">+<%= h.quantity %></span>
                                        <% } else { %>
                                        <span class="text-danger"><%= h.quantity %></span>
                                        <% } %>
                                    </td>
                                    <td><%= h.note || '-' %></td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                    <% } else { %>
                    <p class="text-muted">Bu ürün için stok geçmişi bulunamadı.</p>
                    <% } %>

                    <a href="/admin/stock" class="btn btn-outline-primary mt-3">
                        <i class="bi bi-arrow-left me-2"></i>Geri
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../../partials/footer') %>
