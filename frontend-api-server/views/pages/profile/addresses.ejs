<%- include('../../partials/header') %>
<%- include('../../partials/navbar') %>

<main class="container py-4">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-lg-3 mb-4">
            <%- include('../../partials/profile-sidebar', { activePage: 'addresses' }) %>
        </div>

        <!-- Content -->
        <div class="col-lg-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="mb-0"><i class="bi bi-geo-alt me-2"></i>Adreslerim</h4>
                <a href="/profile/addresses/new" class="btn btn-primary">
                    <i class="bi bi-plus me-2"></i>Yeni Adres
                </a>
            </div>

            <% if (addresses && addresses.length > 0) { %>
            <div class="row g-3">
                <% addresses.forEach(function(addr) { %>
                <div class="col-md-6">
                    <div class="address-card h-100 <%= addr.isDefault ? 'border-primary' : '' %>">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div>
                                <h6 class="mb-0">
                                    <i class="bi bi-geo-alt me-2"></i><%= addr.title %>
                                    <% if (addr.isDefault) { %>
                                    <span class="badge bg-primary ms-2">Varsayılan</span>
                                    <% } %>
                                </h6>
                            </div>
                            <div class="dropdown">
                                <button class="btn btn-sm btn-link text-muted" data-bs-toggle="dropdown">
                                    <i class="bi bi-three-dots-vertical"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" href="/profile/addresses/<%= addr.id %>/edit">
                                            <i class="bi bi-pencil me-2"></i>Düzenle
                                        </a>
                                    </li>
                                    <li>
                                        <form action="/profile/addresses/<%= addr.id %>/delete" method="POST">
                                            <button type="submit" class="dropdown-item text-danger"
                                                    onclick="return confirm('Bu adresi silmek istediğinize emin misiniz?')">
                                                <i class="bi bi-trash me-2"></i>Sil
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <p class="text-muted mb-1 small">
                            <%= addr.fullAddress %>
                        </p>
                        <p class="text-muted mb-0 small">
                            <%= addr.district %>/<%= addr.city %>
                            <% if (addr.zipCode) { %> - <%= addr.zipCode %><% } %>
                        </p>
                    </div>
                </div>
                <% }); %>
            </div>
            <% } else { %>
            <div class="empty-state">
                <i class="bi bi-geo-alt"></i>
                <h4>Adres Bulunamadı</h4>
                <p class="text-muted">Henüz adres eklemediniz.</p>
                <a href="/profile/addresses/new" class="btn btn-primary">
                    <i class="bi bi-plus me-2"></i>Yeni Adres Ekle
                </a>
            </div>
            <% } %>
        </div>
    </div>
</main>

<%- include('../../partials/footer') %>
