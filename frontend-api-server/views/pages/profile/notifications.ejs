<%- include('../../partials/header') %>
<%- include('../../partials/navbar') %>

<main class="container py-4">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-lg-3 mb-4">
            <%- include('../../partials/profile-sidebar', { activePage: 'notifications' }) %>
        </div>

        <!-- Content -->
        <div class="col-lg-9">
            <div class="profile-content">
                <h4 class="mb-4"><i class="bi bi-bell me-2"></i>Bildirimlerim</h4>

                <% if (notifications && notifications.length > 0) { %>
                <div class="list-group list-group-flush shadow-sm rounded">
                    <% notifications.forEach(function(notif) { %>
                    <div class="list-group-item p-3 <%= notif.read ? '' : 'bg-light border-start border-primary border-4' %>">
                        <div class="d-flex w-100 justify-content-between align-items-center mb-1">
                            <h6 class="mb-1 fw-bold text-dark"><%= notif.title %></h6>
                            <small class="text-muted"><%= new Date(notif.date).toLocaleDateString('tr-TR') %></small>
                        </div>
                        <p class="mb-1 text-secondary small"><%= notif.message %></p>
                        <% if (!notif.read) { %>
                            <span class="badge bg-primary rounded-pill small">Yeni</span>
                        <% } %>
                    </div>
                    <% }); %>
                </div>
                <% } else { %>
                <div class="text-center py-5 bg-white border rounded">
                    <i class="bi bi-bell-slash text-muted display-1"></i>
                    <h4 class="mt-3">Bildirim Bulunmuyor</h4>
                    <p class="text-muted">Şu an için yeni bir bildiriminiz yok.</p>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</main>

<%- include('../../partials/footer') %>
