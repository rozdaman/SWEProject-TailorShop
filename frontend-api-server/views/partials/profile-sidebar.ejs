<div class="profile-sidebar">
    <div class="text-center mb-4">
        <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
            <i class="bi bi-person fs-1"></i>
        </div>
        <% if (locals.user) { %>
            <h5 class="mt-3 mb-0"><%= user.username || user.email %></h5>
            <small class="text-muted d-block"><%= user.email %></small>
        <% } %>
    </div>
    <nav class="nav flex-column">
        <a class="nav-link <%= activePage === 'profile' ? 'active' : '' %>" href="/profile">
            <i class="bi bi-person me-2"></i>Profilim
        </a>
        <a class="nav-link <%= activePage === 'orders' ? 'active' : '' %>" href="/orders">
            <i class="bi bi-bag me-2"></i>Siparişlerim
        </a>
        <a class="nav-link <%= activePage === 'addresses' ? 'active' : '' %>" href="/profile/addresses">
            <i class="bi bi-geo-alt me-2"></i>Adreslerim
        </a>
        <a class="nav-link <%= activePage === 'favorites' ? 'active' : '' %>" href="/profile/favorites">
            <i class="bi bi-heart me-2"></i>Favorilerim
        </a>
        <a class="nav-link <%= activePage === 'notifications' ? 'active' : '' %>" href="/profile/notifications">
            <i class="bi bi-bell me-2"></i>Bildirimler
        </a>
        <hr>
        <a class="nav-link text-danger" href="/auth/logout">
            <i class="bi bi-box-arrow-right me-2"></i>Çıkış Yap
        </a>
    </nav>
</div>
